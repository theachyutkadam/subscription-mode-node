  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Authentication": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "admin@mailinator.com",
            "required": true
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "12345678",
            "required": true
          }
        }
      },
      "ForgotPassword": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "admin@mailinator.com",
            "required": true
          }
        }
      },
      "Authorization": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "role_id": {
            "type": "integer",
            "nullable": false,
            "required": true
          },
          "can_read": {
            "type": "boolean",
            "default": false,
            "nullable": false
          },
          "can_write": {
            "type": "boolean",
            "default": false,
            "nullable": false
          },
          "can_update": {
            "type": "boolean",
            "default": false,
            "nullable": false
          },
          "can_delete": {
            "type": "boolean",
            "default": false,
            "nullable": false
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "deletedAt": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "integer",
            "required": true,
            "enum": ["pending", "active", "block", "deleted"]
          },
          "description": {
            "type": "text"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "required": true,
            "format": "email",
            "example": "admin@mailinator.com"
          },
          "password": {
            "type": "string",
            "required": true,
            "format": "password",
            "example": "12345678"
          },
          "role_id": {
            "type": "integer",
            "required": true,
            "example": 2
          }
        }
      },
      "UserInformation": {
        "type": "object",
        "properties": {
          "first_name": {
            "type": "string",
            "required": true
          },
          "last_name": {
            "type": "string",
            "required": true
          },
          "birth_date": {
            "type": "string",
